{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist",
    "baseUrl": "..",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["./**/*.ts", "../app/models/**/*.ts"],
  "exclude": ["node_modules"]
}
